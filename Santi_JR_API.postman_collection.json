{
	"info": {
		"name": "Santi.JR Voice Assistant API",
		"description": "Complete API testing collection for Santi.JR backend with Google Gemini",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Health Check",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"console.log('Health Check Response:', pm.response.code);",
							"pm.test('Status is OK', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql('ok');",
							"});",
							"pm.test('Response time is less than 1000ms', function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:3000/health",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"health"
					]
				}
			},
			"response": []
		},
		{
			"name": "2. Ask Question",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"console.log('About to send request to:', pm.request.url);",
							"console.log('Method:', pm.request.method);",
							"pm.environment.set('request_timestamp', new Date().toISOString());"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"console.log('Response Code:', pm.response.code);",
							"console.log('Response Time:', pm.response.responseTime, 'ms');",
							"",
							"pm.test('Request successful', function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
							"});",
							"",
							"pm.test('Response has required fields', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('response');",
							"    pm.expect(jsonData).to.have.property('timestamp');",
							"});",
							"",
							"pm.test('Response is not empty', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.response.length).to.be.above(0);",
							"});",
							"",
							"// Store for later use",
							"pm.environment.set('last_ai_response', pm.response.json().response);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"message\": \"Explain quantum physics in simple terms\"\n}"
				},
				"url": {
					"raw": "http://localhost:3000/ask",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"ask"
					]
				}
			},
			"response": []
		},
		{
			"name": "3. Teach Topic",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"console.log('Teaching endpoint test started');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Request successful', function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
							"});",
							"",
							"pm.test('Response contains topic and response', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('response');",
							"    pm.expect(jsonData).to.have.property('topic');",
							"});",
							"",
							"console.log('Teaching response received');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"topic\": \"Machine Learning\"\n}"
				},
				"url": {
					"raw": "http://localhost:3000/teach",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"teach"
					]
				}
			},
			"response": []
		},
		{
			"name": "4. Advanced Question",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"message\": \"What is the difference between machine learning and deep learning? Provide examples.\"\n}"
				},
				"url": {
					"raw": "http://localhost:3000/ask",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"ask"
					]
				}
			},
			"response": []
		},
		{
			"name": "5. Error Test - Invalid Message",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Should return 400 Bad Request', function () {",
							"    pm.expect(pm.response.code).to.eql(400);",
							"});",
							"",
							"pm.test('Error message present', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('error');",
							"    pm.expect(jsonData).to.have.property('details');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"message\": \"\"\n}"
				},
				"url": {
					"raw": "http://localhost:3000/ask",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"ask"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000"
		},
		{
			"key": "request_timestamp",
			"value": ""
		},
		{
			"key": "last_ai_response",
			"value": ""
		}
	]
}
